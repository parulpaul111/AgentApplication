<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LanguageSelectionActivity"
    android:background="@drawable/bg1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_label"
            android:layout_width="272dp"
            android:layout_height="82dp"
            android:layout_alignParentTop="true"

            android:layout_alignParentRight="true"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="56dp"
            android:paddingTop="5dp"
            android:text="Select your language..
                        अपनी भाषा का चयन करें |"
            android:textColor="#000000"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnEnglish"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="126dp"
            android:layout_marginTop="264dp"
            android:layout_marginEnd="121dp"
            android:background="@drawable/btn5"
            android:text="ENGLISH"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="126dp"
            android:layout_marginRight="121dp" />

        <TextView
            android:layout_below="@+id/btnEnglish"
            android:id="@+id/txt_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="197dp"
            android:layout_marginTop="331dp"
            android:text="OR"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="197dp" />

        <Button
            android:id="@+id/btnHindi"
            android:layout_width="168dp"
            android:layout_height="51dp"
            android:layout_below="@+id/txt_or"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="119dp"
            android:background="@drawable/btn5"
            android:text="HINDI"
            android:layout_alignParentRight="true"
            android:layout_marginRight="119dp" />


    </RelativeLayout>

    <EditText
        android:id="@+id/Political_Experience"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_below="@id/Political_Party"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="318dp"
        android:layout_marginEnd="16dp"
        android:background="#ffffff"
        android:hint="@string/politicalexperience"
        android:inputType="number"
        android:paddingStart="20dp"
        android:textColorHint="#000000"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:paddingLeft="20dp" />



</LinearLayout>